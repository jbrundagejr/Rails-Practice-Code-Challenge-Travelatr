<h1>Add a Blogger</h1>

<%if flash[:errors]%>
<%flash[:errors].map do |error|%>
<p><%=error%></p>
<%end%>
<%end%>

<%= form_for @blogger do |f| %>

<%= f.label "Name" %>
<%= f.text_field :name %>

<%= f.label :bio %>
<%= f.text_field :bio%>

<%= f.label :age %>
<%= f.text_field :age %>

<%= f.submit %>

<% end %>